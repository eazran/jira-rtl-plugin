<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.cal.jira</groupId>
    <artifactId>jira-rtl-plugin</artifactId>
    <version>1.0.8-SNAPSHOT</version>

    <organization>
        <name>VISA CAL</name>        
    </organization>

    <name>jira-rtl-plugin</name>
    <description>This is a fork from https://github.com/daonb/jira-rtl-plugin right to left plugin for Atlassian JIRA.</description>
    <!-- <packaging>atlassian-plugin</packaging>  -->


    <build>
    	<resources>
      <resource>
        <directory>${project.basedir}</directory>
        <includes>
            <include>css/</include>
            <include>images/</include>
            <include>js/</include>
            <include>atlassian-plugin.xml</include>
            <include>jira_rtl.properties</include>
            <include>LICENSE</include>
        </includes>
      </resource>      
    </resources>
    </build>

    <properties>
        <jira.version>7.8.4</jira.version>
        <amps.version>5.0.4</amps.version>
        <plugin.testrunner.version>1.2.0</plugin.testrunner.version>
		<!-- TestKit version 5.x for JIRA 5.x, 6.x for JIRA 6.x -->
		<testkit.version>5.2.26</testkit.version>
    </properties>

</project>
